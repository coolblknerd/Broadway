<%= form_for @play do |f| %>

<div class="form-group">
  <label for="inputLabel">Image Input</label>
  <%= f.file_field :play_img %>
</div>

<div class="form-group">
  <%= select_tag(:category_id, options_for_select(@categories), prompt: "Select Category", class: "form-control") %>
</div>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control", rows: "5" %>
</div>

<div class="form-group">
  <%= f.label :director %>
  <%= f.text_field :director, class: "form-control", placeholder: "Director" %>
</div>

<div>
  <%= f.submit "Create", class: "btn btn-primary" %>
</div>

<% end %>
