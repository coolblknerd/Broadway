<h1>Edit <%= @play.title %></h1>

<%= form_for @play do |f| %>

<div class="form-group">
  <label for="inputLabel">Image Input</label>
  <%= f.file_field :play_img %>
</div>

<div class="form-group">
  <%= f.select(:category_id, @categories, html_options: { class: "form-control" }) %>
</div>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
</div>

<div class="form_group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control", rows: "5" %>
</div>

<div class="form-group">
  <%= f.label :director %>
  <%= f.text_field :director, class: "form-control", placeholder: "Director" %>
</div>

<div>
  <%= f.submit "Save", class: "btn btn-primary" %>
</div>

<% end %>
