<%= form_for([@play, @play.reviews.build]) do |f| %>

<div class="form-group">
  <%= f.label :rating %>
  <p>
    <%= f.radio_button(:rating, "1") %> 1
    <%= f.radio_button(:rating, "2") %> 2
    <%= f.radio_button(:rating, "4") %> 3
    <%= f.radio_button(:rating, "4") %> 4
    <%= f.radio_button(:rating, "5") %> 5
  </p>
</div>

<div class="form-group">
  <%= f.label :comment %>
  <%= f.text_area :comment, rows: "2", class: "form-control" %>
</div>

<%= f.submit %>

<% end %>
